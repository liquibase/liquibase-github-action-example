					<includeSystemScope>true</includeSystemScope>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.liquibase</groupId>
				<artifactId>liquibase-maven-plugin</artifactId>
				<version>3.10.2</version>
				<configuration>
				  <propertyFile>${liquibase.propertyFile}</propertyFile>
